<div class="row">
    <div class="col-md-12">
        {% if tools %}
            <div class="btn-group" role="group" aria-label="...">
                <a class="btn btn-primary" href="{{ path('tables') }}">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </a>
                {% if is_granted('IS_AUTHENTICATED_FULLY') and (is_granted('ROLE_ADMIN') or app.user == team.captain) %}
                    <a class="btn btn-warning" href="{{ path('table_edit', {id: table.id}) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-danger" href="#delete_popup" id="delete-btn">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </a>
                {% endif %}
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') and (is_granted('ROLE_ADMIN') or app.user == team.captain) %}
                <div id="delete_popup" style="display: none;">
                    <p>Ar tikrai norite ištrinti šį stalą?</p>

                    <div class="text-center">
                        {{ form_start(delete_form) }}
                        {{ form_row(delete_form.submit) }}
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            {% endif %}
        {% endif %}
        <h1>{{ table.name }}<br>
            <small> {{ table.address }}, {{ table.city }} </small>
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p>
            <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
            {{ table.availableFrom|date('H:i') }} - {{ table.availableTo|date('H:i') }}
        </p>
        {% if table.private %}
            <p>
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                Prie šio stalo gali žaisti tik {{ table.group.name }} grupės nariai.
            </p>
        {% endif %}
    </div>
</div>
<div id="game-info" class="row"
     data-url="{{ url('table_show', {id: table.id}) }}"
     data-dataUrl="{{ url('table_status', {id: table.id}) }}">
    <div class="col-md-12">
        {% if table.free %}
            <h2>Stalas yra laisvas!</h2>
        {% elseif game and not game.tournament is defined %}
            <h2>Stalas yra užimtas</h2>
            <div class="row bg-primary">
                <div class="col-xs-12 col-md-12 text-center">
                    {{ game.startTime|date('H:i') }}
                    - {{ game.endTime == 0 ? '?' : game.endTime|date('H:i') }}
                </div>
            </div>
            <div class="row bg-primary">
                <div class="col-xs-12 col-md-4 text-left">
                    <h6>
                        {{ game.user(0) is empty ? 'Svečias' : game.user(0).getName() }}
                        ir {{ game.user(1) is empty ? 'Svečias' : game.user(1).getName() }}
                    </h6>
                </div>
                <div class="col-xs-12 col-md-4 text-center">
                    <div class="media">
                        <div class="media-left media-middle">
                            <h5>{{ game.goals(0) }}</h5>
                        </div>
                        <div class="media-body">
                            <h4>VS</h4>
                        </div>
                        <div class="media-right media-middle">
                            <h5>{{ game.goals(1) }}</h5>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4 text-right">
                    <h6>
                        {{ game.user(2) is empty ? 'Svečias' : game.user(2).getName() }}
                        ir {{ game.user(3) is empty ? 'Svečias' : game.user(3).getName() }}
                    </h6>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% if hasTournament %}
    <div id="tournament" data-url="{{ url('table_tournament', {'table_id': table.id}) }}"></div>
{% endif %}