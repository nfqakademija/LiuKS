{% extends '::base.html.twig' %}

{% block title -%}{{ team.name }} |{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-md-12">
            <div class="btn-group" role="group">
                <a class="btn btn-primary" href="{{ path('teams') }}">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </a>
                {% if is_granted('IS_AUTHENTICATED_FULLY') and (is_granted('ROLE_ADMIN') or app.user == team.captain) %}
                    <a class="btn btn-warning" href="{{ path('teams_edit', {id: team.id}) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-danger" href="#delete_popup" id="delete-btn">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </a>
                {% endif %}
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') and (is_granted('ROLE_ADMIN') or app.user == team.captain) %}
                <div id="delete_popup" style="display: none;">
                    <p>Ar tikrai norite ištrinti šią komandą?</p>

                    <div class="text-center">
                        {{ form_start(delete_form) }}
                        {{ form_row(delete_form.submit) }}
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            {% endif %}
            <h1 class="text-center">{{ team.name }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-4 text-left">
            <h3>{{ team.captain.name }} {{ team.captain.surname }}</h3>
        </div>
        <div class="col-xs-12 col-md-4 text-center">
            <div class="media">
                <div class="media-left media-middle">
                    {% if team.captain.picture %}
                        <img class="media-object" src="{{ team.captain.picture }}" alt="team captain picture"/>
                    {% endif %}
                </div>
                <div class="media-body">
                    <h3>ir</h3>
                </div>
                <div class="media-right media-middle">
                    {% if team.player != NULL and team.player.picture %}
                        <img class="media-object" src="{{ team.player.picture }}" alt="team player picture"/>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-4 text-right">
            <h3>
                {% if team.player != NULL %}
                    {{ team.player.name }} {{ team.player.surname }}
                {% else %}
                    - Laisva vieta -
                {% endif %}
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-offset-3 col-md-6">
            <ul class="list-group">
                <li class="list-group-item">
                    Žaista
                    <span class="label label-primary pull-right">{{ team.gamesPlayed }}</span>
                </li>
                <li class="list-group-item">
                    Laimėta
                    <span class="label label-primary pull-right">{{ team.gamesWon }}</span>
                </li>
                <li class="list-group-item">
                    Pralaimėta
                    <span class="label label-primary pull-right">{{ team.gamesPlayed - team.gamesWon }}</span>
                </li>
                <li class="list-group-item">
                    Įvarčiai
                    <span class="label label-primary pull-right">{{ team.totalGoals }}</span>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
