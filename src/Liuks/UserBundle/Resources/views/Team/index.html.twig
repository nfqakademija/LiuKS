{% extends '::base.html.twig' %}

{% block title -%}Komandų reitingai |{% endblock %}

{% block body -%}
    <main>
        <div class="jumbotron panel-heading">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h3>Komandų reitingas</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div id="actions" class="row text-center">
                    <div class="col-xs-12 col-md-offset-3 col-md-6">
                        <a class="btn btn-success btn-block btn-lg" href="{{ path('teams_new') }}">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            Sukurk savo komandą!
                        </a>
                    </div>
                </div>
            {% endif %}
            <div class="row">
                <div class="col-md-12 page-content-table">
                    <div class="table-responsive">
                        <table class="sortable-table table table-striped table-condensed">
                            <thead>
                            <tr>
                                <th>Pavadinimas</th>
                                <th>Žaista</th>
                                <th>Laimėta</th>
                                <th>Pralaimėta</th>
                                <th>Įvarčiai</th>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <th>Veiksmai</th>
                                {% endif %}
                            </tr>
                            </thead>
                            <tbody>
                            {% for team in teams %}
                                <tr>
                                    <td><a href="{{ path('teams_show', {'id': team.id}) }}">{{ team.name }}</a></td>
                                    <td>{{ team.gamesPlayed }}</td>
                                    <td>{{ team.gamesWon }}</td>
                                    <td>{{ team.gamesPlayed - team.gamesWon }}</td>
                                    <td>{{ team.totalGoals }}</td>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a class="btn btn-warning"
                                                   href="{{ path('teams_edit', { 'id': team.id }) }}">
                                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                                </a>
                                                <a class="btn btn-primary"
                                                   href="{{ path('teams_show', { 'id': team.id }) }}">
                                                    <span class="glyphicon glyphicon-chevron-right"
                                                          aria-hidden="true"></span>
                                                </a>
                                            </div>
                                        </td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts -%}
    {% javascripts 'js/jquery.tablesorter.min.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        $(document).ready(
                function ()
                {
                    $(".sortable-table ").tablesorter(
                            {
                                sortList: [[2, 1], [4, 1]]
                            }
                    );
                }
        );
    </script>
{% endblock %}