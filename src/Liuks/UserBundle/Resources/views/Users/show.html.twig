{% extends '::base.html.twig' %}

{% block title -%}Naudotojas {{ user.name }} {{ user.surname }} |{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-md-12">
            <h1>Vartotojas</h1>
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Foto</th>
                    <td><img src="{{ user.picture }}"/></td>
                </tr>
                <tr>
                    <th>Facebook ID</th>
                    <td>{{ user.facebookId }}</td>
                </tr>
                <tr>
                    <th>Pilnas vardas</th>
                    <td>{{ user.name }} {{ user.surname }}</td>
                </tr>
                <tr>
                    <th>El. paštas</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Rolės</th>
                    <td>{{ user.roles|join(', ') }}</td>
                </tr>
                <tr>
                    <th>Žaista</th>
                    <td>{{ user.gamesPlayed }}</td>
                </tr>
                <tr>
                    <th>Laimėta</th>
                    <td>{{ user.gamesWon }}</td>
                </tr>
                </tbody>
            </table>

            <ul class="list-inline">
                <li><a href="{{ path('users') }}"><span class="glyphicon glyphicon-chevron-left"
                                                        aria-hidden="true"></span></a></li>
                <li><a href="{{ path('users_edit', { 'id': user.id }) }}"><span class="glyphicon glyphicon-pencil"
                                                                                aria-hidden="true"></span></a></li>
                <li>{{ form(delete_form) }}</li>
            </ul>
        </div>
    </div>
{% endblock %}
